@model EmployeesApp.Web.Models.Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers    
@addTagHelper *, EmployeesApp.Web
<!DOCTYPE html>
    <html>
    <head>
        <title>Details about employee</title>
    </head>
    <body>

        <form asp-controller="employees" asp-action="detail">
            <label asp-for="Name"></label>
            <input asp-for="Name" value="@Model.Name" />
            <span asp-validation-for="Name"></span>

            <label asp-for="Email"></label>
            <input asp-for="Email" value="@Model.Email" />
            <span asp-validation-for="Email"></span>

            <button type="submit">Update</button>
        </form>
    </body>
    </html>