@model EmployeesApp.Web.Models.Employee[]
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
    <html>
    <head>
        <title>Employees</title>
    </head>
    <body>
        <ul>
            @foreach (var employee in Model)
            {
                <li>
                    <a
                        asp-controller="employees"
                        asp-action="detail"
                        asp-route-id=@employee.Id>
                        @employee.Name
                    </a>
                </li>
            }   
        </ul>

        <a href="@Url.Action("Create", "Employees")">Create a new employee</a>
    </body>
    </html>